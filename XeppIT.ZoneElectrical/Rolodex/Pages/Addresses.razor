@page "/addresses"
@using XeppIT.ZoneElectrical.Project.Models
@using XeppIT.ZoneElectrical.Project.Shared
@using XeppIT.ZoneElectrical.Rolodex.Models
@using XeppIT.ZoneElectrical.Project
@using XeppIT.ZoneElectrical.Rolodex.Shared

@inject RolodexService RolodexService
@inject DialogService DialogService

<AuthorizeView Roles="EMPLOYEE">
    <Authorized>
        <div class="container-fluid">
            <div class="row">
                <h3>Address List</h3>
            </div>
            <div class="row">
                <button type="button" class="btn btn-primary mb-3" @onclick="OpenNewAddressDialog">New Address</button>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Street</th>
                                <th scope="col">Town</th>
                                <th scope="col">Postcode</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var address in AddressList)
                            {
                                <tr>
                                    <td>@address.Name</td>
                                    <td>@address.Street</td>
                                    <td>@address.Town</td>
                                    <td>@address.Postcode</td>
                                    <td><button type="button" class="btn btn-primary" @onclick="() => OpenEditProjectDialog(address)"><span class="oi oi-pencil"></span></button></td>
                                    <td><button type="button" class="btn btn-danger" @onclick="() => DeleteProject(address)"><span class="oi oi-ban"></span></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <p>You're not logged in as admin.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; }

    System.Security.Claims.ClaimsPrincipal _currentUser;

    List<Address> AddressList { get; set; } = new List<Address>();

    protected override async Task OnInitializedAsync()
    {
        // Get the current logged in user
        _currentUser = (await AuthenticationStateTask).User;

        await GetAddressList();
    }

    public async Task GetAddressList()
    {
        var addressList = await RolodexService.FindAllAddressesAsync();

        AddressList.Clear();

        foreach (var address in addressList)
        {
            AddressList.Add(address);
        }
    }

    async Task OpenNewAddressDialog()
    {
        await DialogService.OpenAsync<AddressNewDialog>($"New Address");

        await GetAddressList();

        StateHasChanged();
    }

    async Task OpenEditProjectDialog(Address address)
    {
        await DialogService.OpenAsync<AddressEditDialog>($"Edit Address {address.ToString()}",
            new Dictionary<string, object>() { { "Context", address } });

        await GetAddressList();

        StateHasChanged();
    }

    async Task DeleteProject(Address address)
    {
        await RolodexService.DeleteAddressAsync(address);

        await GetAddressList();

        StateHasChanged();
    }
}